          %a{:href => "https://play.google.com/store/apps/details?id=com.hybridgroup.commander", :class => "store-button"}
            %img{:src => "images/google-play.png", :alt => ""}/
      .hero-image
        %img{:src => "images/hero-bg.png", :alt => "", :class => "display"}/